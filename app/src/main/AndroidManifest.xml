<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aau.carma">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name=".CARMAApplication">

        <activity android:name=".SetupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />

        <activity android:name=".GestureConfigurationOptionsActivity"
                  android:parentActivityName=".MainActivity"/>

        <activity android:name=".AddGestureActivity"
                  android:parentActivityName=".MainActivity" />

        <activity android:name=".SelectGestureActivity"
                  android:parentActivityName=".MainActivity"/>

        <activity android:name=".SelectRoomAndActionActivity"
                  android:parentActivityName=".SelectGestureActivity"/>
    </application>

</manifest>
