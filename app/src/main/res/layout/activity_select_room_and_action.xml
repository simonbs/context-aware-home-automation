<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SelectRoomAndActionActivity">

    <ListView
        android:layout_width="107dp"
        android:layout_height="200dp"
        android:id="@+id/actions_listView"
        android:layout_gravity="right|center_vertical"
        android:layout_toLeftOf="@+id/rooms_listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/rooms_listView"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:listSelector="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/rooms_textView"
        android:layout_above="@+id/rooms_listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        tools:text="Actions"
        />

    <ListView
        android:layout_width="196dp"
        android:layout_height="200dp"
        android:id="@+id/rooms_listView"
        android:layout_gravity="left|center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:listSelector="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/actions_textView"
        android:layout_above="@+id/rooms_listView"
        android:layout_toRightOf="@+id/actions_listView"
        android:layout_toEndOf="@+id/actions_listView"
        tools:text="Rooms"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bind_button"
        android:src="@android:drawable/ic_input_add"
        android:layout_below="@+id/actions_listView"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done_binding_button"
        android:text="@string/done_binding_button_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
