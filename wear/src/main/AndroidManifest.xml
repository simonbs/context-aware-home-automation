<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aau.carma">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <activity
            android:name=".SetupActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".TrainGestureActivity"
            android:label="@string/title_activity_train_gesture" />
        <activity
            android:name=".TrainGesture.NameTrainGestureActivity"
            android:label="@string/title_activity_name_train_gesture" />
        <activity
            android:name=".ConfigureAction.ConfigureActionActivity"
            android:label="@string/title_activity_configure_action_select_gesture" />
        <activity
            android:name=".Pickers.ContextOutcomePickerActivity"
            android:label="@string/title_activity_context_outcome_picker" />
        <activity
            android:name=".Pickers.RoomPickerActivity"
            android:label="@string/title_activity_room_picker" />
    </application>

</manifest>
